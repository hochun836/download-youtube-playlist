{
  "appenders": {
    "console": {
      "type": "console"
    },
    "app": {
      "type": "dateFile",
      "filename": "log/app.log",
      "pattern": "-yyyy-MM-dd"
    },
    "errorFile": {
      "type": "file",
      "filename": "log/errors.log"
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "console",
        "app",
        "errors"
      ],
      "level": "DEBUG"
    }
  }
}